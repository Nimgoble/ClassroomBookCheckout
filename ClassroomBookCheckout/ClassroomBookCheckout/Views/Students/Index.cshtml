@using ClassroomBookCheckout.Models
@model IEnumerable<ClassroomBookCheckout.Models.Student>

@{
    ViewBag.Title = "Index";
}

<h2>Students</h2>

<p>
    @Html.ActionLink("Add Student", "Create")
</p>

<ul>
    @foreach (Student student in Model) 
    {
        <li>@Html.ActionLink(String.Format("{0}, {1}", student.LastName, student.FirstName), "Details", new {Id = student.ID_Student}, null)</li>
    }
</ul>

